<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical" 
        android:gravity="center">
        <com.carit.util.Clock
        android:id="@+id/clock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="90dp" />
        <com.carit.util.DateView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
		android:textSize="25dp" />
    </LinearLayout>  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center">
         <ImageButton
        android:id="@+id/navi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/navi_btn"
        android:background="@android:color/transparent"
        android:layout_weight="1"/>   
        <ImageButton
        android:id="@+id/media"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/media_btn"
        android:background="@android:color/transparent"
        android:layout_weight="1"/>    
        <ImageButton
        android:id="@+id/yilian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/yilian_btn"
        android:background="@android:color/transparent"
        android:layout_weight="1"/>    
        <ImageButton
        android:id="@+id/reversing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/revers_btn"
        android:background="@android:color/transparent"
        android:layout_weight="1"/>    
        <ImageButton
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_btn"
        android:background="@android:color/transparent"
        android:layout_weight="1"/>     
        <ImageButton
        android:id="@+id/apps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/apps_btn"
        android:background="@android:color/transparent"
        android:layout_weight="1"/>    
        </LinearLayout>

   
    
</LinearLayout>
