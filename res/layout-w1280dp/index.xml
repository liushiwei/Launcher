<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.george.MainActivity" 
   >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/bk" />
    
     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/car" 
        android:paddingLeft="130dp"
        android:paddingTop="120dp"/>
     
     <com.george.CustomView.PathView
        android:id="@+id/pathview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
     

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/voice"
        android:layout_width="200dp"
        android:layout_height="117dp"
       >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/voice" />

        <TextView
            android:id="@+id/voice_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:focusable="true"
            android:nextFocusLeft="@+id/voice_lable"
            android:nextFocusRight="@+id/e_link_lable"
            android:text="@string/voice" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/e_link"
        android:layout_width="200dp"
        android:layout_height="117dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/phonelink" />

        <TextView
            android:id="@+id/e_link_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:nextFocusLeft="@+id/voice_lable"
            android:nextFocusRight="@+id/more_lable"
            android:text="@string/phone_con" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/more"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/more" />

        <TextView
            android:id="@+id/more_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:focusable="true"
            android:nextFocusLeft="@+id/e_link_lable"
            android:nextFocusRight="@+id/music_lable"
            android:text="@string/apps" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/music"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/music" />

        <TextView
            android:id="@+id/music_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:focusable="true"
            android:nextFocusLeft="@+id/more_lable"
            android:nextFocusRight="@+id/video_lable"
            android:text="@string/media" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/video"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/video" />

        <TextView
            android:id="@+id/video_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:focusable="true"
            android:nextFocusLeft="@+id/music_lable"
            android:nextFocusRight="@+id/navi_lable"
            android:text="@string/video" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/navi"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/navi" />

        <TextView
            android:id="@+id/navi_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             android:nextFocusLeft="@+id/video_lable"
            android:nextFocusRight="@+id/phone_lable"
            android:focusable="true"
            android:text="@string/navi" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/phone"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/phone_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:focusable="true"
            android:nextFocusLeft="@+id/navi_lable"
            android:nextFocusRight="@+id/setup_lable"
            android:text="@string/phone_bt" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/setup"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/setup" />

        <TextView
            android:id="@+id/setup_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:focusable="true"
            android:nextFocusLeft="@+id/phone_lable"
            android:nextFocusRight="@+id/camera360_lable"
            android:text="@string/settings" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/camera360"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/navi" />

        <TextView
            android:id="@+id/camera360_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:nextFocusLeft="@+id/setup_lable"
            android:nextFocusRight="@+id/atmo_lamp_lable"
            android:text="@string/camera360" />
    </com.george.CustomView.CustomRelativeLayout>

    <com.george.CustomView.CustomRelativeLayout
        android:id="@+id/atmo_lamp"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/navi" />

        <TextView
            android:id="@+id/atmo_lamp_lable"
            style="@style/Icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="true"
             android:nextFocusLeft="@+id/camera360_lable"
             android:nextFocusRight="@+id/atmo_lamp_lable"
            android:text="@string/atmo_lamp" />
    </com.george.CustomView.CustomRelativeLayout>

</RelativeLayout>